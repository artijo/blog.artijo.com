---
const {nav} = Astro.props
const path = Astro.url.pathname
---
{nav.map((item:any) => (
    <a
      class='font-medium text-gray-500 transition hover:text-gray-400 dark:text-gray-400 dark:hover:text-gray-500 md:py-4'
      href={item.link}
    >
      <span
        class={
          path.startsWith(item.link)
            ? 'font-bold text-gray-600 dark:text-gray-300'
            : ''
        }
      >
        {item.name}
      </span>
    </a>
  ))}