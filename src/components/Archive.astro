---

<div class="px-[16px] mx-auto grid  max-w-[1120px] grid-cols-1 gap-4 md:grid-cols-2 md:gap-5 lg:grid-cols-3">
    {posts.map((post: any) => (
              <Card slug={post.slug} feature_image={post.data.thumbnail} title={post.data.title} />
    ))}
</div>